<h1>Quests#show</h1>


<div class="container">
  <div class="col-12 col-lg-6" style="background-color: #009900">
    <div class="card" style="background-color: #EBAD1C">
      <p><%= "Level #{@quest.level}"%></p>
      <h5><%= "#{@quest.title}"%></h5>
      <p><%= "#{@quest.content}"%></p>
      <p><%= "#{@quest.occurences}"%></p>
      <p><%= "#{@quest.tips}"%></p>
      <br>
        <%= render "form_quest", quest: @quest, user_quest: @user_quest %>

    </div>
  </div>
</div>

<div>
  <h2 class= "btn-start">START</h2>
</div>
