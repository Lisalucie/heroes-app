<h1>Quests#show</h1>


<div class="container" data-controller="progress-bar">
  <div class="col-12 col-md-6">
    <div class="card card-quest" style="background-color: #EBAD1C">
      <p><%= "Level #{@quest.level}"%></p>
      <h1><%= "#{@quest.title}"%></h1>
      <p><%= "#{@quest.content}"%></p>
      <p><%= "#{@quest.occurences}"%></p>
      <p><%= "#{@quest.tips}"%></p>
        <%= render "form_quest", quest: @quest, user_quest: @user_quest %>
      <div class="container-bar">
        <div class="progress" data-progress-bar-target="progressBar">
          <div class="progress-bar">
          </div>
        </div>
      </div>
    </div>
  </div>
    <%= render "form_quest", quest: @quest, user_quest: @user_quest %>
</div>
