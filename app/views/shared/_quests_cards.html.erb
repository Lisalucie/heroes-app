<div class="quest-container" >
  <div>
    <div class="col-12">
      <% @quests.each do |quest| %>
        <% user_quest = quest.user_quests %>
        <% if quest.user_quests.where(user: current_user).any? %>
          <div class="quest-card-validated">
              <p><%= "#{quest.title} - /#{quest.occurences}"%></p>
              <div class="progress-bar-placement">
                <div class=" progress-validated">
                  <div class="progress-bar">
                  </div>
                </div>
              </div>
            </div>
        <% else %>
          <%= link_to (quest_path(quest)) do%>
            <div class="quest-card">
              <p><%= "#{quest.title} - /#{quest.occurences}"%></p>
              <div class="progress-bar-placement">
                <div class="progress">
                  <div class="progress-bar">
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
